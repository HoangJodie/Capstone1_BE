generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model authorizationrequests {
  request_id   Int       @id @default(autoincrement())
  user_id      Int?
  role_id      Int?
  status_id    Int?
  request_date DateTime? @db.Date

  @@index([role_id], map: "role_id")
  @@index([status_id], map: "status_id")
  @@index([user_id], map: "user_id")
}

model chatbotqueries {
  query_id   Int       @id @default(autoincrement())
  user_id    Int?
  question   String?   @db.Text
  response   String?   @db.Text
  query_date DateTime? @default(now()) @db.Timestamp(0)

  @@index([user_id], map: "user_id")
}

/// This model has been renamed to 'Renamedclass' during introspection, because the original name 'class' is reserved.
model Renamedclass {
  class_id          Int       @id @default(autoincrement())
  class_name        String    @db.VarChar(255)
  class_description String?   @db.VarChar(255)
  status_id         Int?
  class_type        String?   @db.VarChar(50)
  start_date        DateTime? @db.Date
  end_date          DateTime? @db.Date
  fee               Decimal?  @db.Decimal(10, 2)

  @@index([status_id], map: "status_id")
  @@map("class")
}

model membership {
  membership_id   Int       @id @default(autoincrement())
  user_id         Int?
  membership_type String?   @db.VarChar(255)
  start_date      DateTime? @db.Date
  end_date        DateTime? @db.Date
  price           Decimal?  @db.Decimal(10, 2)
  status_id       Int?

  @@index([status_id], map: "status_id")
  @@index([user_id], map: "user_id")
}

model role {
  role_id   Int    @id @default(autoincrement())
  role_name String @db.VarChar(255)
}

model schedule {
  schedule_id Int       @id @default(autoincrement())
  class_id    Int?
  days        String?   @db.VarChar(50)
  start_hour  DateTime? @db.Time(0)
  end_hour    DateTime? @db.Time(0)

  @@index([class_id], map: "class_id")
}

model status {
  status_id          Int    @id @default(autoincrement())
  status_description String @db.VarChar(255)
}

model user {
  user_id    Int       @id @default(autoincrement())
  username   String    @db.VarChar(255)
  password   String    @db.VarChar(255)
  email      String    @db.VarChar(255)
  phoneNum   String?   @db.VarChar(20)
  role_id    Int?
  status_id  Int?
  created_at DateTime? @default(now()) @db.Timestamp(0)
  updated_at DateTime? @default(now()) @db.Timestamp(0)

  @@index([role_id], map: "role_id")
  @@index([status_id], map: "status_id")
}

model user_class {
  user_id   Int
  class_id  Int
  status_id Int?

  @@id([user_id, class_id])
  @@index([class_id], map: "class_id")
  @@index([status_id], map: "status_id")
}
